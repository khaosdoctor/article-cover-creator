{
	"unstable": ["kv"],
	"fmt": {
		"options": {
			"indentWidth": 2,
			"useTabs": true,
			"singleQuote": true,
			"lineWidth": 100
		}
	},
	"lock": true,
	"tasks": {
		"api": "deno run --allow-read --allow-net --allow-write --allow-run --unstable --allow-env src/presentation/api/api.ts",
		"dev:api": "DENO_ENV=local deno run --watch -A src/presentation/api/api.ts"
	},
	"lint": {
		"rules": {
			"exclude": ["no-explicit-any"]
		}
	},
	"imports": {
		"@oak/oak": "jsr:@oak/oak@^16.1.0",
		"@std/assert": "jsr:@std/assert@^0.226.0",
		"@std/dotenv": "jsr:@std/dotenv@^0.224.1",
		"@std/encoding": "jsr:@std/encoding@^0.224.3",
		"@std/http": "jsr:@std/http@^0.224.5",
		"@std/io": "jsr:@std/io@^0.224.2",
		"@std/path": "jsr:@std/path@^0.225.2",
		"@std/testing": "jsr:@std/testing@^0.225.3",
		"zod": "https://deno.land/x/zod@v3.23.8/mod.ts",
		"og_edge": "https://deno.land/x/og_edge@0.0.5/mod.ts",
		"react": "https://esm.sh/react@18.2.0",
		"reactDOM": "https://esm.sh/react-dom@18.2.0/server",
		"compress": "https://deno.land/x/compress@v0.4.6/mod.ts"
	}
}
